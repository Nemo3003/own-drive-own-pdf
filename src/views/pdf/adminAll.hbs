<div class="row">
    {{#each uploads}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body ">
                <h4 class="card-title d-flex justify-content-between align-items-center">{{name}}
                  <!-- PUT REQUEST NOT YET IMPLEMEMNTET-->
                     <a href="/app/app/games/games/edit/{{_id}}"><i class="fas fa-edit"></i></a></h4>
                      <p>{{first_alt}}</p>
                      <p>{{second_alt}}</p>
                      <p>{{third_alt}}</p>
                      <p>{{fourth_alt}}</p>
                      <p>{{fifth_alt}}</p>
                 <!-- DELETE REQUEST NOT YET IMPLEMENTET-->


{{#if success_msg}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{success_msg}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

{{#if error_msg}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{error_msg}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}
<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">New PDF</h3>
    </div>
    <div class="card-body text-right">
      <form action="/class/pdf/add" method="POST">
      <div class="mb-3">
          <label for="classy">Class:</label>
          <input
            type="text"
            name="classy"
            class="form-control"
            placeholder="Class name"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="name">Title:</label>
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Title"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="first_alt">First Alternative:</label>
          <input
            type="text"
            name="first_alt"
            class="form-control"
            placeholder="Title"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="second_alt">Second Alternative:</label>
          <input
            type="text"
            name="second_alt"
            class="form-control"
            placeholder="Drive"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="third_alt">Third Alternative:</label>
          <input
            type="text"
            name="third_alt"
            class="form-control"
            placeholder="Drive"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="fourth_alt">Fourth Alternative:</label>
          <input
            type="text"
            name="fourth_alt"
            class="form-control"
            placeholder="Drive"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="fifth_alt">Fifth Alternative:</label>
          <input
            type="text"
            name="fifth_alt"
            class="form-control"
            placeholder="Drive"
            autofocus
          />
        </div>
        <button class="btn btn-primary w-100" type="submit">
          Save
        </button>
      </form>
    </div>
  </div>
</div>